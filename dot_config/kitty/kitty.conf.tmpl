# White
color7 #eef0f7
#eef1f8
color15 #eef0f7
# End Color Scheme Configuration
{{- end }}

# Begin Tab Bar Configuration
tab_bar_edge top
tab_bar_style separator
# End Tab Bar Configuration

{{- if eq .chezmoi.hostname "deskytoppy" }}
linux_display_server wayland
wayland_enable_ime yes
{{- end }}

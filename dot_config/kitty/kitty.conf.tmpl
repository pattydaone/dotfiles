# vim:fileencoding=utf-8:foldmethod=marker

# My config (below stays for reference)

# BEGIN_KITTY_FONTS
{{- if eq .chezmoi.hostname "deskytoppy" }}
font_family      family="JetBrainsMono Nerd Font"
{{- end }}
{{- if eq .chezmoi.hostname "Patricks-Macbook-Air" }}
font_family      family="JetBrainsMono Nerd Font Mono"
{{- end }}
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

# Begin Color Scheme Configuration
background_opacity 0.85
background_image none

{{- if eq .chezmoi.hostname "Patricks-Macbook-Air" }}
include ./theme.conf
{{- end }}

{{- if eq .chezmoi.hostname "deskytoppy" }}
background #14161b
selection_background #e0e2ea
foreground #e0e2ea
selection_foreground #14161b

url_color #f6ccfb

cursor #9b9ea4
cursor_text_color #e0e2ea

# Black
color0 #07070c
#07080d
color8 #4f5157
#4f5157

# Red
color1 #f5c2bb
#ffc0b9
color9 #f5c2bb

# Green
